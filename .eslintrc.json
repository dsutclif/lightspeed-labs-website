{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "no-debugger": ["error"],
    "prefer-const": ["error"],
    "no-var": ["error"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-eval": ["error"],
    "no-implied-eval": ["error"],
    "no-new-func": ["error"],
    "no-script-url": ["error"]
  },
  "globals": {
    "siteContent": "readonly"
  }
}